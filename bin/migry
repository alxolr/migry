#!/usr/bin/env node

const program = require('commander');
const migry = require('../lib/migry');

program
  .version('0.0.2')
  .option('-c, --config [path]', 'config file path [path]', '');

program.command('list')
  .description('list the existing migrations')
  .action(migry.list);

program.command('create <name>')
  .description('create a new migration')
  .action(migry.create);

program.command('run [name]')
  .description('run updates to latest or current')
  .action(migry.up);

program.parse(process.argv);
